{
  "name": "@onchain-id/solidity",
  "version": "2.0.0-beta-2",
  "description": "Ethereum solidity smart contracts for Blockchain OnchainID identities.",
  "files": [
    "build",
    "contracts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "truffle compile && truffle-flattener contracts/Identity.sol > build/Identity.sol && truffle-flattener contracts/proxy/ImplementationAuthority.sol > build/ImplementationAuthority.sol && truffle-flattener contracts/ClaimIssuer.sol > build/ClaimIssuer.sol && truffle-flattener contracts/factory/IdFactory.sol > build/IdFactory.sol",
    "console": "truffle console",
    "coverage": "truffle run coverage --file=\"test/onchainid.test.js\"",
    "docgen": "solidity-docgen ./ contracts/ docs/api",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:js": "eslint \"test/*.js\"",
    "lint:js-fix": "eslint \"test/*.js\" --fix",
    "test": "truffle test ./test/onchainid.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onchain-id/solidity.git"
  },
  "keywords": [
    "onchainid",
    "identity",
    "erc734",
    "erc735",
    "ethereum",
    "solidity",
    "smart contracts"
  ],
  "author": "OnchainID Organization",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onchain-id/solidity/issues"
  },
  "homepage": "https://github.com/onchain-id/solidity#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@openzeppelin/contracts": "^4.6.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "ganache": "^7.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.5.16",
    "truffle": "^5.4.8",
    "truffle-flattener": "^1.6.0",
    "web3": "^1.7.3",
    "eth-create2-calculator": "^1.1.5",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
